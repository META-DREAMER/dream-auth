{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/server/**/*",
			"**/test/**/*",
			"**/tests/**/*",
			"**/e2e/**/*",
			"**/index.html",
			"**/vite.config.ts",
			"**/vitest.config.ts",
			"!**/src/routeTree.gen.ts",
			"!**/src/styles.css",
			"!**/src/components/ui"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useUniqueElementIds": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
