{
  "name": "dream-auth",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "node .output/server/index.mjs",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:ci:integration": "vitest run --config vitest.integration.config.ts --reporter=verbose",
    "test:all": "pnpm test && pnpm test:integration && pnpm test:e2e",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "@noble/hashes": "1.8.0"
    }
  },
  "dependencies": {
    "@base-org/account": "~2.4.2",
    "@better-auth/passkey": "^1.4.6",
    "@coinbase/wallet-sdk": "^4.3.7",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource-variable/manrope": "^5.2.8",
    "@fontsource-variable/merriweather": "^5.2.6",
    "@fontsource-variable/outfit": "^5.2.8",
    "@fontsource/geist-sans": "^5.2.5",
    "@hookform/resolvers": "^5.2.2",
    "@phosphor-icons/react": "^2.1.10",
    "@safe-global/safe-apps-provider": "~0.18.6",
    "@safe-global/safe-apps-sdk": "~9.1.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-devtools": "^0.8.6",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-router": "^1.154.5",
    "@tanstack/react-router-devtools": "^1.154.5",
    "@tanstack/react-router-ssr-query": "^1.154.5",
    "@tanstack/react-start": "^1.154.5",
    "@tanstack/router-plugin": "^1.154.5",
    "@walletconnect/ethereum-provider": "^2.23.0",
    "better-auth": "^1.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "input-otp": "^1.4.2",
    "nitro": "npm:nitro-nightly@latest",
    "pg": "^8.16.3",
    "porto": "~0.2.37",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "siwe": "^3.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "viem": "^2.41.2",
    "vite-tsconfig-paths": "^5.1.4",
    "wagmi": "^3.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@playwright/test": "^1.57.0",
    "@tanstack/devtools-vite": "^0.3.12",
    "@testcontainers/postgresql": "^11.11.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^25.0.0",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/wait-on": "^5.3.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.7",
    "shadcn": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^3.0.5",
    "wait-on": "^9.0.3",
    "web-vitals": "^5.1.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ]
  }
}
