# E2E Test Environment
# Loaded by Vite when using --mode test
# These values override .env for E2E tests

DISABLE_DEVTOOLS=true
BETTER_AUTH_SECRET=test-secret-at-least-32-characters-long-for-testing
BETTER_AUTH_AUTO_MIGRATE=true
ENABLE_REGISTRATION=true
ENABLE_OIDC_PROVIDER=true
ENABLE_PASSKEYS=true
ENABLE_SIWE=true
OIDC_REQUIRE_PKCE=true

# OIDC test clients (port 3001 is the default E2E port)
OIDC_CLIENTS='[{"clientId":"test-client","clientSecret":"test-secret","name":"Test Client","type":"web","redirectURLs":["http://localhost:3001/callback"],"skipConsent":false},{"clientId":"trusted-client","clientSecret":"trusted-secret","name":"Trusted Client","type":"web","redirectURLs":["http://localhost:3001/callback"],"skipConsent":true}]'

# Server URL (port 3001 is the default E2E port)
BETTER_AUTH_URL=http://localhost:3001

# DATABASE_URL is set dynamically by global-setup.ts (from testcontainers)
